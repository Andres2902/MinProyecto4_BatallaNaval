<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.batalla_naval.view.WelcomeViewController"
      alignment="CENTER"
      spacing="25"
      prefWidth="800"
      prefHeight="600"
      style="-fx-background-color: linear-gradient(to bottom, #0f172a, #020617);">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="âš“"
           style="-fx-font-size: 72px;" />

    <Label text="BATALLA NAVAL"
           style="-fx-font-size: 40px; -fx-text-fill: #38bdf8; -fx-font-weight: bold;" />

    <VBox spacing="12" alignment="CENTER">
        <TextField fx:id="nameField"
                   promptText="Nombre del jugador"
                   maxWidth="240" />

        <ComboBox fx:id="difficultyBox"
                  promptText="Dificultad"
                  maxWidth="240" />
    </VBox>

    <VBox spacing="12" alignment="CENTER">
        <Button fx:id="newGameButton"
                text="Nueva partida"
                prefWidth="200" />

        <Button fx:id="loadGameButton"
                text="Cargar partida"
                prefWidth="200" />
    </VBox>

</VBox>
